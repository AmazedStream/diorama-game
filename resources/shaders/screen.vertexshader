#version 400 core

layout (location = 0) in vec3 vertex_position;

uniform vec2 viewport_;

out vec3 final_color;

void main()
{
	gl_Position.x = (vertex_position.x / viewport_.x * 0.5f) - 1.0f;
	gl_Position.y = (vertex_position.y / viewport_.y * -0.5f) + 1.0f;
	gl_Position.z = vertex_position.z;
	gl_Position.w = 1.0f;
	final_color = vec3 (1.0f, 1.0f, 1.0f);
}
